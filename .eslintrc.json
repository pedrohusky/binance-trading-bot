{
  "extends": ["airbnb", "prettier", "plugin:jest/recommended"],
  "plugins": ["prettier", "jest"],
  "rules": {
    "prettier/prettier": [
      "error",
      {
        "printWidth": 80,
        "trailingComma": "none",
        "semi": true,
        "jsxSingleQuote": true,
        "singleQuote": true,
        "useTabs": false,
        "endOfLine": "auto"
      }
    ],
    "comma-dangle": ["error", "never"],
    "max-len": ["error", { "code": 120 }],
    "no-unused-vars": ["error", { "argsIgnorePattern": "^_" }]
  },
  "settings": {
    "react": {
      "version": "999.999.999"
    }
  },
  "parserOptions": {
    "ecmaVersion": 2020
  }
}
